{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>New Movie Cast Member</h1>
                {{ form_start(castMemberForm) }}
                {{ form_widget(castMemberForm) }}
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-xs btn-success pull-right"
                   href="{{ path('new_person', {
                       'returnPath': path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}) }}">
                    + Create New Person
                </a>
                {{ form_end(castMemberForm) }}

            </div>
        </div>
    </div>
{% endblock %}